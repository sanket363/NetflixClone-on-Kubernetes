    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["custom.d.ts", "node_modules/@types"],
    "allowSyntheticDefaultImports": true
